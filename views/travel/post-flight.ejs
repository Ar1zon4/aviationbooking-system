<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-light bg-dark" id="nav">
        <div class="container-fluid" >
          <a class="navbar-brand"><i class="fa-solid fa-cubes" style="color: azure;"></i>Air Ar!zon4</a>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </nav>
   

    <div class="container">
        <div class="row">
            <% flights.forEach(function(flight) { %>
            <div class="col-lg-3 col-md-4 col-sm-1 col-10">
                  <div>
                    <img src="..." class="card-img-top" alt="...">
                   </div> 
                   
                      <h5 class="card-title"><%=flight.name%></h5>
                      <p class="card-text"><%=flight.depart%>.</p>
                      <p class="card-text"><%=flight.arrival%>.</p>
                      <p class="card-text"><%=flight.flightpackage%></p>
                      <p class="card-text"><%=flight.date%></p>
                      <p class="card-text"><%=flight.token%></p>

                      <button  class="btn btn-warning text-white"><a style="text-decoration: none;" class="text-white" href="/update-flight/<%=flight.id%>">Update </a></button>
                      
                           <form  action="/delete-flight" method="post">
                                <input type="hidden" name="id" value="<%=flight.id%>">
                                <td><button type="submit" class="btn btn-danger">Delete</button></td> 
                            </form>
                      



                      <a href="/book-flight" class="btn btn-primary">Go somewhere</a>
                 
            </div>
            <% }); %>

        </div>
    </div>
        
         
    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

</html>